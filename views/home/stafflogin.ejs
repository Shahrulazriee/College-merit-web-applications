<%- include ("../_partial/_headers") -%>

<style>
	@import "compass/css3";
	@import url(https://fonts.googleapis.com/css?family=Vibur);
	* {
		box-sizing: border-box;
		-moz-box-sizing: border-box;
		-webkit-box-sizing: border-box;
		font-family: arial;
	}
	body {
		background: hsl(40, 22%, 92%);
	}
	h1 {
		color: rgb(0, 0, 0);
		text-align: left;
		font-family: "Verdana", cursive;
		font-size: 50px;
	}

	.login-form {
		width: 650px;
		padding: 40px 30px;
		background: rgb(255, 255, 255);
		border-radius: 4px;
		margin: auto;
		position: absolute;
		left: 0;
		right: 0;
		top: 20%;
	}
	.form-group {
		position: relative;
		margin-bottom: 15px;
	}
	.form-control {
		width: 100%;
		height: 50px;
		border: none;
		padding: 5px 7px 5px 15px;
		background: #fff;
		color: #666;
		border: 2px solid #ddd;
		border-radius: 4px;
	}
	.form-group .fa {
		position: absolute;
		right: 15px;
		top: 17px;
		color: #999;
	}
	.log-status.wrong-entry .form-control,
	.wrong-entry .form-control + .fa {
		border-color: #ed1c24;
		color: #ed1c24;
	}
	.log-btn {
		background: #696969;
		display: inline-block;
		width: 100%;
		font-size: 16px;
		height: 50px;
		color: #fff;
		text-decoration: none;
		border: none;
		border-radius: 4px;
	}

	.log-btn1 {
		background: #9a9999;
		display: inline-block;
		width: 100%;
		font-size: 16px;
		height: 50px;
		color: #fff;
		text-decoration: none;
		border: none;
		border-radius: 4px;
	}

	.link {
		text-decoration: none;
		color: #c6c6c6;
		float: right;
		font-size: 12px;
		margin-bottom: 15px;
	}
	.alert {
		display: none;
		font-size: 12px;
		color: #f00;
		float: left;
	}
</style>

<div class="login-form">
	<h1>
		Unicycle: <br />
		Merit Management
	</h1>
	<form method="POST" action="/stafflogin">
		<div class="form-group">
			<input
				type="text"
				class="form-control"
				placeholder="Staff ID "
				id="staffID"
				name="staffID"
			/>
			<i class="fa fa-user"></i>
		</div>
		<div class="form-group log-status">
			<input
				type="password"
				class="form-control"
				placeholder="Password"
				id="password"
				name="password"
			/>
			<i class="fa fa-lock"></i>
		</div>
		<span class="alert">Invalid Credentials</span>
		<button type="submit" class="log-btn">Log in</button>
		<a href="/">
			<br /><br />
			<button type="button" class="log-btn1">Student login</button>
		</a>
	</form>
</div>

<script>
	$(document).ready(function () {
		$(".log-btn").click(function () {
			$(".log-status").addClass("wrong-entry");
			$(".alert").fadeIn(500);
			setTimeout("$('.alert').fadeOut(1500);", 3000);
		});
		$(".form-control").keypress(function () {
			$(".log-status").removeClass("wrong-entry");
		});
	});
</script>

<%- include ("../_partial/_footer") -%>
